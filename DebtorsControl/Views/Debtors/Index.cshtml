@model DebtorsControl.ViewModel.InvoiceViewModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<br />
<br />
<br />
<div class="container">
    <div class="row">
        <div class="col-md-6">
            <div class="panel panel-danger">
                <canvas id="myChartBar"></canvas>
            </div>
        </div>
        <div class="col-md-6">
            <div class="panel panel-danger">
                <canvas id="myChart"></canvas>
            </div>

        </div>
      
    </div>
    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                @Html.DropDownListFor(model => model.GetClients, new SelectList(Model.GetClients, "ClientCode", "ClientName"), new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.GetClients, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="col-md-6">
            @Html.DropDownListFor(model => model.YearList, new SelectList(Model.YearList, "Years", "Years"), new { @class = "form-control"})
            @Html.ValidationMessageFor(model => model.GetClients, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="row">
        <div class="col-md-6">
            <div class="panel panel-danger">
                <canvas id="NairaChartBar"></canvas>
            </div>
        </div>
        <div class="col-md-6">
            <div class="panel panel-primary">
                <canvas id="DollarChart"></canvas>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6">
            <div class="panel panel-danger" style="background: #FF5722;">
                <a href="/Debtors/CreateStaff">
                    <div class="widget" style="height: 200px;">
                        <br /><br />
                        <div class="p-m col-sm-12">
                            <div class="col-xs-2 text-center">
                                <i class="fa fa-user fa-3x" style="color: #fff;"></i>
                            </div>
                            <div class="col-xs-10">
                                <span><h3 class="h3" style="color: #fff;">Staff Creation</h3></span>
                            </div>


                            <div align="center">
                                <br /><br />
                                <small style="font-size: 12px;color: #fff;">User Creation</small><br />

                            </div>
                        </div>

                    </div>
                </a>
            </div>
        </div>
        <div class="col-md-6">
            <div class="panel panel-success" style="background: #3F51B5;">
                <a href="/Debtors/CreateClient">
                    <div class="widget" style="height: 200px;">
                        <br />
                        <br />
                        <div class="p-m col-sm-12">
                            <div class="col-xs-2 text-center">
                                <i class="fa fa-users fa-3x" style="color: #fff;"></i>
                            </div>
                            <div class="col-xs-10">
                                <span><h3 class="h3" style="color: #fff;">Clients Creation</h3></span>
                            </div>


                            <div align="center">
                                <br /><br />
                                <small style="font-size: 12px;color: #fff;">Clients Creation</small><br />
                            </div>
                        </div>

                    </div>
                </a>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6">
            <div class="panel panel-success" style="background: #FDD835;">

                <a href="/Debtors/AddInvoice">
                    <div class="widget" style="height: 200px;">
                        <br />
                        <br />
                        <div class="p-m col-sm-12">
                            <div class="col-xs-2 text-center">
                                <i class="fa fa-file fa-3x" style="color: #fff;"></i>
                            </div>
                            <div class="col-xs-10">
                                <span><h3 class="h3" style="color: #fff;">Invoice Creation</h3></span>
                            </div>

                            <div align="center">
                                <br /><br />
                                <small style="font-size: 12px;color: #fff;">Add invoice Entry</small><br />
                            </div>
                        </div>

                    </div>
                </a>
            </div>
        </div>
        <div class="col-md-6">

            <div class="panel panel-danger" style="background: #40C4FF;">
                <a href="/Debtors/ServiceEntry">
                    <div class="widget" style="height: 200px;">
                        <br />
                        <br />
                        <div class="p-m col-sm-12">
                            <div class="col-xs-2 text-center">
                                <i class="fa fa-wrench fa-3x" style="color: #fff;"></i>
                            </div>
                            <div class="col-xs-10">
                                <span><h3 class="h3" style="color: #fff;">Service Entry</h3></span>
                            </div>
                            <div align="center">
                                <br /><br />
                                <small style="font-size: 12px;color: #fff;">Add service netry attached to an invoice</small><br />
                                </div>
                        </div>

                    </div>
                </a>
            </div>
        </div>
    </div>
</div>
<!-- /page content -->
