@model DebtorsControl.ViewModel.ClientsViewModel

@{
    ViewBag.Title = "Add Invoice";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col-md-8 col-md-offset-2">
            @using (Html.BeginForm())
            {
                <p class="text-danger">@ViewBag.ErrorMessage</p>
                <p class="text-success">@ViewBag.Success</p>
                <p class="text-warning">@ViewBag.Empty</p>
                <p class="text-warning">@ViewBag.Error </p>
                <div class="form-group">
                    <div class="col-md-2"><label>Select Client</label></div>
                    <div class="col-md-10">
                        @Html.DropDownListFor(model => model.GetClients, new SelectList(Model.GetClients, "ClientName", "ClientName"), new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.GetClients, "", new { @class = "text-danger" })
                    </div>
                </div>
                <br />
                                                <br />
                                                <br />
                                                <div class="form-group">
                                                    <div class="col-md-2"><label>Invoice No</label></div>
                                                    <div class="col-md-10"><input class="form-control" type="text" name="invoicenumber" required /></div>


                                                </div>
                                                <div class="form-group" style="display:flex; justify-content:flex-end; margin-top:50px;">
                                                    <input class="btn btn-primary " type="submit" name="submit" />
                                                </div>
            }
        </div>
    </div>
</div>
