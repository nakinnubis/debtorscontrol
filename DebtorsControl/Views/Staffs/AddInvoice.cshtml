@model DebtorsControl.ViewModel.ClientsViewModel

@{
    ViewBag.Title = "Add Invoice";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col-md-8 col-md-offset-2">
            @using (Html.BeginForm())
            {
                <div class="form-group">
                    @Html.DropDownListFor(model => model.GetClients, new SelectList(Model.GetClients, "ClientCode", "ClientName"), new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.GetClients, "", new { @class = "text-danger" })

                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="invoicenumber" required />
                </div>
                <div class="form-group">
                    <input class="btn btn-primary" type="submit" name="submit" />
                </div>
            }
        </div>
    </div>
</div>
